<Controls:MetroWindow x:Class="com.gestapoghost.entertainment.xaml.scene.SceneThumb"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:u="clr-namespace:com.gestapoghost.entertainment.xaml.usercontrol"
                      xmlns:t="clr-namespace:com.gestapoghost.entertainment.tools"
                      Title="MainWindow"
                      Height="1000"
                      Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Center" HorizontalAlignment="Left" >
            <Image x:Name="SceneThumbImage" t:ImageDecoder.Source="{Binding Path=Scene.Pic, Mode=TwoWay}" ></Image>
        </Grid>
    </Grid>
</Controls:MetroWindow>
